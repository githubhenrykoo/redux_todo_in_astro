# Authentik Authentication Configuration
# Make a copy of this file as .env

# Authentik Client ID (required)
# You need to register your application in Authentik to get this value
AUTHENTIK_CLIENT_ID=your-client-id

# Public App URL 
# Used for constructing redirect URLs (required)
PUBLIC_APP_URL=http://localhost:4321

# Authentication Scopes
# Default: 'openid profile email'
AUTHENTIK_SCOPES=openid profile email

# Custom Authentik Server URL (optional)
# Default is https://auth.pkc.pub
# AUTHENTIK_URL=https://auth.pkc.pub

# Node environment
NODE_ENV=development

# Notion OAuth Configuration
# These variables must be prefixed with PUBLIC_ to be accessible in client-side code
PUBLIC_NOTION_AUTH_URL=https://api.notion.com/v1/oauth/authorize?client_id=YOUR_CLIENT_ID&response_type=code&owner=user&redirect_uri=http%3A%2F%2Flocalhost%3A4321%2Fauth%2Fnotion%2Fcallback
PUBLIC_NOTION_CLIENT_ID=your-notion-client-id
PUBLIC_NOTION_CLIENT_SECRET=your-notion-client-secret

# Telegram Configuration
TELEGRAM_WEBSITE_URL=http://localhost:4321
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-telegram-chat-id

# Port Configuration
PORT=4321
