FROM node:18-alpine

WORKDIR /app

# Copy the built static files first
COPY dist ./dist
COPY public ./public

# Copy our static server
COPY Kubernetes/server.static.js ./server.static.js

# Expose port
EXPOSE 3000

# Set environment variables
ENV NODE_ENV=production
ENV PORT=3000

# Run the static server
CMD ["node", "server.static.js"]
